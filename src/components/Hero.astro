---
import { Image } from "astro:assets";
import githubImage from "@images/github.svg";
---

<section
  id="hero"
  class="h-[calc(100svh-8rem)] flex flex-col justify-center items-center gap-16 mt-28"
>
  <div class="flex flex-col justify-center items-center gap-1">
    <h1 class="text-center text-3xl sm:text-4xl font-light">
      Hey! I'm Engin Karakurt.
    </h1>
    <p
      class="relative w-[max-content]
        before:absolute before:inset-0
        before:bg-black
        before:animate-typewriter after:absolute after:inset-1 after:w-[0.1rem] after:animate-caret
        after:bg-gray-100"
    >
      Full stack developer
    </p>
  </div>

  <a
    href="https://github.com/engin-karakurt"
    target="_blank"
    rel="noopener noreferrer"
    class="flex items-center gap-4 p-4 rounded-full border-2 border-gray-700"
  >
    <Image
      loading={"eager"}
      draggable="false"
      alt=""
      class="invert size-8"
      src={githubImage}
    />
    My GitHub
  </a>
</section>
